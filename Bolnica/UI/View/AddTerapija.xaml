<Window x:Class="UI.View.AddTerapija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.View"
        mc:Ignorable="d"
        Title="AddTerapija" Height="300" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="77,93,0,0" TextWrapping="Wrap" Text="{Binding Naziv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding Nazivlbl, UpdateSourceTrigger=PropertyChanged}" Foreground="red" FontWeight="Bold" x:Name="imelbl" HorizontalAlignment="Left" Margin="65,116,0,0" VerticalAlignment="Top" Width="205" Height="24"/>
        <Label Content="Naziv terapije:" FontWeight="Bold" HorizontalAlignment="Left" Margin="77,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.244,0.548" Width="120"/>
        <Button Content="{Binding AddButtonContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Command="{Binding AddTerapijaCommand}" HorizontalAlignment="Left" Margin="77,160,0,0" VerticalAlignment="Top" Width="119" Height="33"/>

    </Grid>
</Window>
