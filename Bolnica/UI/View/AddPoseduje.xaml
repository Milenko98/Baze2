<Window x:Class="UI.View.AddPoseduje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.View"
        mc:Ignorable="d"
        Title="AddPoseduje" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cmbZk" HorizontalAlignment="Left" Margin="298,89,0,0" SelectedItem="{Binding SelectedZk}" ItemsSource="{Binding Zkovi}"  VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbTerapija" HorizontalAlignment="Left" Margin="298,162,0,0" SelectedItem="{Binding SelectedTerapija}" ItemsSource="{Binding Terapije}"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Zdravstveni kartoni:" FontWeight="Bold" HorizontalAlignment="Left" Margin="298,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.002,0.844" Width="120"/>
        <Label Content="Terapija:" FontWeight="Bold" HorizontalAlignment="Left" Margin="298,136,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="{Binding AddButtonContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Command="{Binding AddPosedujeCommand}" HorizontalAlignment="Left" Margin="298,361,0,0" VerticalAlignment="Top" Width="119" Height="33"/>

    </Grid>
</Window>
